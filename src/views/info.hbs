<div class="container p-4">
  <div class="row">
    <div class="col-md-4 offset-md-4">
      <div class="card animate__fadeInDown">
          <img src="{{imgFindId.path}}" alt="{{imgFindId.title}}" class="card-img-top">
            <div class="card-body">
              <h5 class="card-title">{{imgFindId.title}}</h5>
              <p class="card-text">{{imgFindId.description}}</p>
              <p class="card-text">{{format imgFindId.createdAt}}</p>
              <a href="/img/{{imgFindId._id}}/delete" class="btn btn-danger btn-block">
                Eliminar
              </a>
            </div>
        </div>
    </div>
  </div>
</div>